{
  "name": "@pathicles/config",
  "version": "0.10.0",
  "license": "MIT",
  "main": "dist/index.ts",
  "scripts": {
    "build": "esbuild ./src/index.js --bundle --minify --sourcemap --target=es2018 --outfile=dist/index.js",
    "build:watch": "yarn build --watch",
    "dev": "esbuild ./src/index.js --bundle --sourcemap --target=es2020 --outfile=dist/index.js",
    "dev:watch": "yarn dev --watch",
    "lint": "eslint src",
    "lint:fix": "prettier-package-json --write  && eslint --fix src",
    "test": "jest",
    "test:watch": "yarn test -- --watch",
    "typecheck": "tsc"
  },
  "types": "src/index.ts",
  "dependencies": {
    "commander": "^8.3.0",
    "esbuild-runner": "^2.2.1",
    "ts-deepmerge": "^1.1.0"
  },
  "devDependencies": {
    "@pathicles/eslint-config": "*",
    "@pathicles/jest-config": "*",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.1",
    "eslint": "^8.5.0",
    "jest": "^27.4.5",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.5.4"
  }
}
