{
  "private": true,
  "name": "pathicles",
  "description": "monorepo pathicles",
  "license": "MIT",
  "author": "drkrthj <post@dirk-rathje.de>",
  "homepage": "https://pathicles.github.io/pathicles/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pathicles/pathicles.git"
  },
  "bugs": {
    "url": "https://github.com/pathicles/pathicles/issues"
  },
  "workspaces": [
    "packages/@pathicles/app",
    "packages/@pathicles/config",
    "packages/@pathicles/core",
    "packages/@pathicles/docs",
    "packages/@pathicles/prerendered",
    "packages/@pathicles/specrel__"
  ],
  "scripts": {
    "build": "yarn run build:libs; yarn run build:app",
    "build:app": "yarn workspace @pathicles/app run build",
    "build:docs": "yarn workspace @pathicles/docs run build",
    "build:libs": "lerna run --parallel  --scope @pathicles/core  --scope @pathicles/config build",
    "clean": "lerna exec -- rm -rf node_modules && rm -rf node_modules",
    "deploy": "yarn run build; NODE_DEBUG=gh-pages gh-pages -d ./packages/@pathicles/app/dist",
    "dev": "lerna run --parallel  dev:libs dev:app",
    "dev:all": "lerna run --parallel --scope @pathicles/core --scope @pathicles/config --scope  @pathicles/app  dev",
    "dev:app": "yarn workspace @pathicles/app run dev",
    "dev:config": "yarn workspace @pathicles/config run dev",
    "dev:core": "yarn workspace @pathicles/core run dev",
    "dev:docs": "yarn workspace @pathicles/docs run dev",
    "lint-fix": "yarn workspaces run lint-fix",
    "prettier-packages": "npx prettier-package-json --write; lerna exec -- npx prettier-package-json --write",
    "version:bump-minor": "lerna version minor --no-push --conventional-commits",
    "version:bump-patch": "lerna version patch --no-push --conventional-commits",
    "version:changelog": "conventional-changelog -i CHANGELOG.md -s -r 0 -u && git add CHANGELOG.md",
    "release": "release-it --dry-run"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "gh-pages": "^3.1.0",
    "ini": "^1.3.8",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "release-it": "^14.2.2",
    "release-it-yarn-workspaces": "^2.0.0"
  }
}
